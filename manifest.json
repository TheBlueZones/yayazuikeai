{
  "manifest_version": 3,
  "name": "雅雅最可爱",
  "version": "1.0",
  "description": "在任何页面显示雅雅最可爱的粉色悬浮文字。",
  "permissions": ["scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon1.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon1.png"
  }
}
